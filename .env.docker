# Docker Environment Configuration
# This file is used when running services with Docker Compose

# Node Environment
NODE_ENV=development

# MongoDB Configuration (Local)
MONGODB_URL=mongodb://localhost:27017/ecommerce
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_DATABASE_NAME=ecommerce

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6379
REDIS_DATABASE=ecommerce

# Services Configuration (internal Docker network URLs)
AUTH_SERVICE_URL=http://localhost:3011
CATEGORY_SERVICE_URL=http://localhost:3012
COUPON_SERVICE_URL=http://localhost:3013
PRODUCT_SERVICE_URL=http://localhost:3014
ORDER_SERVICE_URL=http://localhost:3015
GRAPHQL_GATEWAY_URL=http://localhost:4000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:6006

# JWT Configuration
JWT_SECRET=docker-dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=docker-dev-refresh-secret-key-change-in-production

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Cloudinary Configuration (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=demo
VITE_CLOUDINARY_UPLOAD_PRESET=unsigned_upload

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASS=test
EMAIL_FROM=noreply@ecommerce.local

# Google OAuth (optional for development)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Logging
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=true

# API URLs for Frontend
VITE_API_URL=http://localhost:4000/graphql
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql

# Development Settings
DEBUG=true
MOCK_AUTH=false
