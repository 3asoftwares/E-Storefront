{
  "name": "3a-ecommerce-utils",
  "version": "1.0.0",
  "description": "Utility functions for 3A Softwares E-Commerce",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/validation/server.d.ts",
      "import": "./dist/validation/server.mjs",
      "require": "./dist/validation/server.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts src/validation/server.ts --format cjs,esm --dts --clean --external 3a-ecommerce-types",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ecommerce",
    "utils",
    "utilities",
    "typescript",
    "microservices"
  ],
  "author": "3aSoftwares",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/3asoftwares/E-Commerce-Microservices-Platform.git",
    "directory": "packages/utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "3a-ecommerce-types": "^1.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.0.1"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "express-validator": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
